{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sea Lantern",
  "version": "1.0.0",
  "identifier": "com.fpsz.sea-lantern",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Sea Lantern",
        "width": 1200,
        "height": 720,
        "minWidth": 1000,
        "minHeight": 625,
        "center": true,
        "decorations": false,
        "resizable": true,
        "transparent": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": [
          "SimpChinese"
        ]
      }
    },
    "linux": {
      "deb": {},
      "rpm": {},
      "appimage": {}
    },
    "publisher": "FPS_Z",
    "shortDescription": "Minecraft 服务器管理器",
    "longDescription": "Sea Lantern 是一个现代化的 Minecraft 服务器管理工具，支持服务器创建、控制台管理、玩家管理等功能。"
  }
}